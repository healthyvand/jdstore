<%= simple_form_for [:admin, @product] do |f| %>
<div class="form-group">
    <%= f.input :title, label: '商品名',input_html: { class: "form-control"} %>
    <%= f.input :description, label: '描述',input_html: { class: "form-control"} %>
    <%= f.input :image, label: '图片'%>

        <!-- 显示图判断 -->
        <% if !no_pic?(@product) %>

        <%= image_tag(@product.image.thumb.url, class: "thumbnail") %>
          <!-- <img src="<#%= @product.image %>" alt="<#%= @product.title %>" class="img-responsive"> -->
        <% end %>


    <%= f.input :quantity, label: '库存',input_html: { class: "form-control"} %>
    <%= f.input :price, label: '价格',input_html: { class: "form-control"} %>
    <%#= f.input :feet, label: '规格',as: :radio_buttons,input_html: { class: "form-control"} %>
    <%#= f.collection_radio_buttons :feet, [[true, 'Yes'] ,[false, 'No']], :first, :last %>

    <%#= f.input :feet, :label => "Lead or VTeam", :collection => ["lead","vteam"], :selected => "lead" %>

    <%= f.input :feet, label: '规格', collection: [["10'x10'", "10'x10'"], ["20'x20'", "20'x20'"],["customization", "customization"]],:selected => "10'x10'"%>

    <%= f.input :attachpdf ,label: 'pdf附件'%>
