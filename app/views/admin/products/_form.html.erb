<%= simple_form_for [:admin, @product] do |f| %>
<div class="form-group">
    <%= f.input :title, label: 'Product name',input_html: { class: "form-control"} %>
    <%= f.input :description, label: 'Description',input_html: { class: "form-control"} %>
    <%= f.input :specification, label: 'Specification',input_html: { class: "form-control"} %>
    <%= f.input :image, label: 'View A',as: :file%>

    <!-- 显示图判断A -->
    <% if !no_pic?(@product) %>
    <%= image_tag(@product.image.thumb.url, class: "thumbnail") %>
    <% end %>

    <br>
    <label for="">View B</label>
    <%= f.file_field :avatar, label: 'View B',:multiple => true, name: "photos[avatar][]" %>
    <br>
    <!-- 显示图判断B -->
    <% if @product.photos.first.present? %>
    <h5></h5>
    <%#= image_tag(@product.photos.first.avatar_url, class: "thumbnail") %>
    <% end %>

    <!-- <label for="">角度C</label> -->
    <%#= f.file_field :avatar, label: '角度C',:multiple => true, name: "photos[avatar][]" %>
    <!-- <br> -->
    <!-- 显示图判断C -->
    <%# if @product.photos.second.present? %>
    <!-- <h5>有图了</h5> -->
    <%#= image_tag(@product.photos.second.avatar_url, class: "thumbnail") %>
    <%# end %>



    <%= f.input :quantity, label: 'Quantity',input_html: { class: "form-control"} %>
    <%= f.input :price, label: 'Price',input_html: { class: "form-control"} %>
    <%#= f.input :feet, label: '规格',as: :radio_buttons,input_html: { class: "form-control"} %>
    <%#= f.collection_radio_buttons :feet, [[true, 'Yes'] ,[false, 'No']], :first, :last %>

    <%#= f.input :feet, :label => "Lead or VTeam", :collection => ["lead","vteam"], :selected => "lead" %>

    <%= f.input :feet, label: 'Catalog', collection: [["10'x10'", "10'x10'"], ["10'x20'", "10'x20'"],["20'x20'", "20'x20'"],["customization", "customization"]],:selected => "10'x10'"%>

    <%= f.input :attachpdf ,label: 'PDF attachment'%>
